<?xml version="1.0" encoding="utf-8" ?>
<config>
    <requirements uses="g++">
        <flags>
            <item>std=c++14</item>
        </flags>

         <!-- <pkgs> -->
            <!-- <item>boost</item>  -->
        <!-- </pkgs> -->

        <!-- <macros>-->
            <!-- <define name="BOOST_SYSTEM_NO_DEPRECATED"/> -->
        <!-- </macros> -->
    </requirements>

    <!-- There is only one solution in a configuration file, and there can be multiple projects in a solution  -->
    <solution>
        <!-- Three types available, dynamic, static, exe -->
        <project name="triangle" output="build" type="static" src="Triangle">

            <!-- Headers，non-system third-party header files, need to be given specific paths,
             but also support relative paths -->
            <includes>
                <path>Triangle</path>
            </includes>

        </project>

                <!-- Three types available, dynamic, static, exe -->
        <project name="test" output="build" type="exe" src="FunctionTest">

            <!-- Headers，non-system third-party header files, need to be given specific paths,
             but also support relative paths -->
            <includes>
                <path>Triangle</path>
                <path>/opt/boost/boost1.75/include</path>
            </includes>

            <libraries path="./build"/>
            <libraries path="/opt/boost/boost1.75/lib">
                <item>-lboost_system</item>
                <item>-lboost_filesystem</item>
            </libraries>
        </project>

        <!-- Another project, the configuration is the same as the previous one -->
    </solution>

</config>